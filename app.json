{
  "name": "CivicTechExchange",
  "scripts": {
  },
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "EMAIL_HOST_PASSWORD": {
      "required": true
    },
    "S3_BUCKET": {
      "required": true
    },
    "ADMIN_EMAIL": {
      "required": true
    },
    "DJANGO_SECRET_KEY": {
      "required": true,
      "generator": "secret"
    },
    "PROTOCOL_DOMAIN": {
      "required": true
    },
    "DISABLE_COLLECTSTATIC": {
      "description": "Don't run python manage.py collectstatic --noinput on deploy",
      "value": "1"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "papertrail"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }, {
      "url": "heroku/nodejs"
    }
  ],
  "environments": {
    "review": {
      "scripts": {
        "postdeploy": "bash -c \"source ./reviewapp-release.sh\""
      },
      "env": {
        "DJANGO_SECRET_KEY": {
          "required": true,
          "generator": "secret"
        },
        "ADMIN_EMAIL": "marlon+reviewadmin@democracylab.org",
        "CONTACT_EMAIL": "marlon+reviewhello@democracylab.org",
        "PROTOCOL_DOMAIN": "PLACEHOLDER"
      }
    }
  }
}
